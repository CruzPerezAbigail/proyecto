<div class="container">
<div class="card mt-5">
<div class="card-header">

                  <h4 class="text text-secondary">Nuevo equipo </h4>
</div>

                  <%= form_for @equipos,url: {action: :create} do |f| %>
                    <%= token_tag nil %>
                    <%= "<div>#{@equipos.errors.full_messages.first}</div>".html_safe if @equipos.errors.any? %>  


                      <div class="form-group row">
                          <%= f.label :serie ,'Serie:', class:'col-sm-2' %>
                          
                          <div class="col-sm-4">
                          <%= f.text_field :serie , class:'form-control' %>
                          </div>
                      </div>

                      

                           <div class="form-group row ">
                           <%= f.label :id_marca,"Marca" , class:'col-sm-2'%>
                           <div class="col-sm-4">
                           <%= f.collection_select( :id_marca, Marca.all{|m| [m.nombre, m.id_marca]}, :id, :nombre, prompt: "Seleccione la marca")%>
                           </div>
                  </div>

                           <div class="form-group row">
                           <%= f.label :Modelo , class:'col-sm-2'%>
                           <div class="col-sm-4">
                           <%= f.text_field :modelo , class:'form-control'%>
                           </div>
                           </div>

                           <div class="form-group row">
                           <%= f.label :Serial , class:'col-sm-2'%>
                           <div class="col-sm-4">
                           <%= f.text_field :serial , class:'form-control'%>
                           </div>
                       </div>


                       <div class="form-group row">
                       <%= f.label :id_departamento, "Departamento" , class:'col-sm-2'%>
                       <div class="col-sm-4">
                       <%= f.collection_select( :id_departamento, Departamento.all{|d| [d.nombre, d.id_departamento]}, :id_departamento, :nombre, class:'form-control', prompt:"Seleccione el departamento")%>
                        
                       </div>
                            </div>

                            <div class="form-group row">
                           <%= f.label :id_area, "Area:" , class:'col-sm-2'%>
                           <div class="col-sm-4">
                           <%= f.collection_select(:id_area, Area.all{|a| [a.nombre,  a.id_area]}, :id_area, :nombre, class:'form-control', prompt: "Seleccione el Ã¡rea")%>
                           </div>
                           </div>


                            <div class="form-group row">
                            <%= f.label :id_tipo ,'Tipo:', class:'col-sm-2' %>
                             <div class="col-sm-4">
                             <%= f.collection_select(:id_tipos, Tipo.all{|t| [t.nombre, t.id_tipos]}, :id, :nombre,  class:'form-control', prompt: "Selecione un tipo" )%>
                                  
                             </div>
                             </div>

                           
           
                           
                              <div class="form-group row">
                              <%= f.label :estatus , "Estatus:" , class:'col-sm-2'%>
                              
                                  <div class="form-group col-sm-4">
                                  <%= f.select :estatus, ["Guardado", "Activo", "Inactivo"], prompt: "Seleccione el estado" %>
                                  </div>
                              </div>
                              <div class="form-group row">
                              <%= f.label :Observaciones , class:'col-sm-2'%>
                              <div class="col-sm-4">
                              <%= f.text_field :observaciones , class:'form-control'%>
                              </div>
                          </div>
                          

                          <div class="form-group row ">
                          <%= f.label :RAM , class:'col-sm-2'%>
                              <div class="col-sm-4">
                              <%= f.text_field :ram , class:'form-control'%>
                                 </div>
                          </div>
           

                          <div class="form-group row">
                          <%= f.label :Disco_duro , class:'col-sm-2' %>
                             
                              <div class="col-sm-4">
                              <%= f.text_field :disco_duro , class:'form-control'%>
                              </div>
                          </div>
                          
                        <% if false %>
                          <div class="form-group row">
                          <%= f.label :id_licencia, "Licencia:"  , class:'col-sm-2'%>
                              <div class="col-sm-4">
                              <%= f.collection_select(:id_licencia, Licencia.all.order(:nombre), :nombre, :nombre, class:'form-control', prompt: "Seleccione una licencia")%>
                                  
                              </div>
                          </div> 
                        <% end %>
                        <br>
                             <br>
           
                 <button type="submit" class="btn btn-info">Guardar</button>
                 <%= link_to 'Cancelar', url_for(:back), class: "btn btn-warning" %>
           
                                  <br>
                                  <br>
                                  
                          </div>
                      </section>
                  </div>
              </div>
              
              <% end %>
              </form>
              

