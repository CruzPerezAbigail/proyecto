<%= form_with(model: insumo) do |form| %>
  <% if insumo.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(insumo.errors.count, "error") %> prohibited this insumo from being saved:</h2>

      <ul>
        <% insumo.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :nombre, style: "display: block" %>
    <%= form.text_field :nombre %>
  </div>

  <div>
    <%= form.label :caracteristicas, style: "display: block" %>
    <%= form.text_field :caracteristicas %>
  </div>

  <div>
    <%= form.label :existencia, style: "display: block" %>
    <%= form.number_field :existencia %>
  </div>

  <div>
    <%= form.label :estatus, style: "display: block" %>
    <%= form.select :estatus, ["Guardado", "Activo", "Inactivo"], prompt: "Seleccione el estatus" %>
  </div>

  <div>
  <button class="btn btn-info" <%= form.submit %> Guardar </button>
  </div>
<% end %>
