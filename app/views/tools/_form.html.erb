<head>
<%= stylesheet_link_tag "style" %>
</head>


<%= form_with(model: tool) do |form| %>
  <% if tool.errors.any? %>
    <div style="color: red">

      <ul>
        <% tool.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <br/>
  <div class="form-group row">
    <%= form.label :nombre, class:'col-sm-2' %>
    <div class="col-sm-4">
    <%= form.text_field :nombre, class:'form-control' %>
  </div>
  </div>

  <div class="form-group row">
    <%= form.label :caracteristicas, class:'col-sm-2'%>
    <div class="col-sm-4">
    <%= form.text_area :caracteristicas, class:'form-control' %>
  </div>
  </div>

  <div class="form-group row" >
    <%= form.label :existencia, class:'col-sm-2'%>
    <div class="col-sm-4">
    <%= form.number_field :existencia , class:'form-control'%>
  </div>
  </div>

  <div class="form-group row">
    <%= form.label :estatus, class:'col-sm-2' %>
    <div class="col-sm-4">
    <%= form.select :estatus, ["Bueno", "Nuevo ", "Regular"], prompt: "Seleccione el estatus", class:'form-control' %>
  </div>
  </div>
  
<br/>
  <div>
  <button class="btn btn-info" <%= form.submit %> Guardar </button>
  <%= link_to 'Cancelar', url_for(:back), class: "btn btn-warning" %>
  </div>
<% end %>

